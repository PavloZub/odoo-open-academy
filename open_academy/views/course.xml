<odoo>
  <data>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="open_academy_action_window">
      <field name="name">OpenAcademy window</field>
      <field name="res_model">open_academy.course</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- explicit list view definition -->

    <record id="open_academy_course_form" model="ir.ui.view">
        <field name="name">OpenAcademy Form</field>
        <field name="model">open_academy.course</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>
    <record id="open_academy_course_list" model="ir.ui.view">
      <field name="name">OpenAcademy list</field>
      <field name="model">open_academy.course</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>


<!--
    &lt;!&ndash; server action to the one above &ndash;&gt;
    <record model="ir.actions.server" id="open_academy.action_server">
      <field name="name">OpenAcademy server</field>
      <field name="model_id" ref="model_open_academy_open_academy"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->
    <menuitem name="OpenAcademy" id="open_academy_menu_root"/>
    <!-- menu categories -->
    <menuitem name="Courses" id="open_academy_courses" parent="open_academy_menu_root"/>
    <!-- actions -->
    <menuitem name="List of courses" id="open_academy_menu_1_list" parent="open_academy_courses"
              action="open_academy_action_window"/>
    <menuitem name="Server to list" id="open_academy_menu_2_server" parent="open_academy_courses"
              action="open_academy_action_server"/>
  </data>
</odoo>